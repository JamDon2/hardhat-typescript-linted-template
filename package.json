{
    "name": "hardhat-typescript-linted-template",
    "type": "module",
    "devDependencies": {
        "@nomicfoundation/hardhat-toolbox": "^2.0.0",
        "@types/node": "^18.11.9",
        "@typescript-eslint/eslint-plugin": "^5.44.0",
        "@typescript-eslint/parser": "^5.44.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-ts": "npm:eslint@^8.28.0",
        "hardhat": "^2.12.2",
        "husky": "^8.0.0",
        "lint-staged": "^13.0.4",
        "prettier": "^2.8.0",
        "prettier-plugin-solidity": "^1.0.0",
        "solhint": "^3.3.7",
        "solhint-plugin-prettier": "^0.0.5",
        "typescript": "^4.9.3"
    },
    "scripts": {
        "prepare": "husky install",
        "lint": "solhint **/*.sol && eslint --ext .js,.ts .",
        "lint:fix": "solhint --fix **/*.sol && eslint --ext .js,.ts . --fix",
        "format": "prettier --write ."
    }
}
